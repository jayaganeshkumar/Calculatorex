<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="false"
    android:id="@+id/verticalLayout"
    android:background="#424242"
    tools:context="com.jayaganeshkumar.calculatorex.MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="5"
        android:background="#424242">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:layout_height="110dp"
                android:layout_width="match_parent"
                android:cursorVisible="false"
                android:id="@+id/displayText"
                android:layout_span="4"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@drawable/my_border_text"
                android:textColor="#ffffffff"
                android:textSize="30sp"
                android:gravity="center_vertical|end"
                android:padding="10dp"
                android:singleLine="false"
                android:freezesText="true"
                android:maxLines="1"
                android:maxLength="25"
                android:ellipsize="end"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_special_buttons"
                android:onClick="C" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x^y"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="21sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_operators"
                android:onClick="Power" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="√"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_operators"
                android:onClick="Sqrt" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=","
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_operators"
                android:onClick="Comma" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_special_buttons"
                android:text="shift"
                android:onClick="Shift"
                android:id="@+id/shiftButton" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="π"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_special_buttons"
                android:onClick="Pi" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rad"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_operators"
                android:onClick="Rad" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/x"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_operators"
                android:onClick="Reci" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x^3"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_operators"
                android:onClick="X3" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="n!"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_special_buttons"
                android:onClick="Fac" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_special_buttons"
                android:onClick="Log" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x^2"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_operators"
                android:onClick="X2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cot"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_operators"
                android:onClick="Cot" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sec"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_operators"
                android:onClick="Sec" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="csc"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_special_buttons"
                android:onClick="Csc" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="("
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"
                android:background="@drawable/my_shape"
                android:textColor="#ffffffff"
                android:onClick="LeftBracket" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"
                android:background="@drawable/my_shape"
                android:textColor="#ffffffff"
                android:onClick="RightBracket" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tangent"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"
                android:background="@drawable/my_shape"
                android:textColor="#ffffffff"
                android:onClick="Tan" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="@string/sine"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_operators"
                android:onClick="Sin" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cosine"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_special_buttons"
                android:onClick="Cos" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/numberSeven"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"
                android:background="@drawable/my_shape"
                android:textColor="#ffffffff"
                android:onClick="Seven" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numberEight"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"
                android:background="@drawable/my_shape"
                android:textColor="#ffffffff"
                android:onClick="Eight" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numberNine"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"
                android:background="@drawable/my_shape"
                android:textColor="#ffffffff"
                android:onClick="Nine" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="DEL"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_operators"
                android:onClick="Del" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AC"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/acbuttonxml"
                android:onClick="Ac" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numberFour"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"
                android:background="@drawable/my_shape"
                android:textColor="#ffffffff"
                android:onClick="Four" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numberFive"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"
                android:background="@drawable/my_shape"
                android:textColor="#ffffffff"
                android:onClick="Five" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numberSix"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"
                android:background="@drawable/my_shape"
                android:textColor="#ffffffff"
                android:onClick="Six" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_operators"
                android:onClick="Plus" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_special_buttons"
                android:onClick="Multiply" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numberOne"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"
                android:background="@drawable/my_shape"
                android:textColor="#ffffffff"
                android:onClick="One" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/numberTwo"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"
                android:background="@drawable/my_shape"
                android:textColor="#ffffffff"
                android:onClick="Two" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backspaceButton"
                android:text="@string/numberThree"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_special_buttons"
                android:onClick="Three" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_special_buttons"
                android:onClick="Minus" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/divide"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_special_buttons"
                android:onClick="Divide" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/numberZero"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_special_buttons"
                android:onClick="Zero" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/decimal"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_operators"
                android:onClick="Dot" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXP"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_operators"
                android:onClick="Exp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:background="@drawable/my_border_operators"
                android:onClick="Ans" />

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/my_border_special_buttons"
                android:onClick="Equals"
                android:text="="
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

        </TableRow>

    </TableLayout>





</RelativeLayout>
